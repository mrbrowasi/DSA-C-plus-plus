void sortarray(vector<int> &arr){ // Dutch National Flag Algorithm TC = O(N) SC = O(1)
    int n = arr.size();
    int mid = 0, low = 0, high = n - 1;
    while(mid <= high){
        if(arr[mid] == 0){
            swap(arr[low], arr[mid]);
            low++;
            mid++;
        }else if(arr[mid] == 1)mid++;
        else{
            swap(arr[mid], arr[high]);
            high--;
        }
    }
    for(int i: arr){
        cout << i << " ";
    }
}
int main(){
    vector<int> arr = {0, 1, 2, 0, 1, 2, 1, 0};
    sortarray(arr);
    return 0;
} 
