#include <iostream> 
#include <climits>
#include <cmath>
#include <algorithm>   
#include <vector>
using namespace std;
//book allocation problem
bool isvalid(vector<int> arr, int n, int m, int mid){ // mid = max pages allocated to a student
    int studentcount = 1;
    int pagesum = 0;
    for(int i = 0; i < n; i++){
        if(arr[i] > mid){
            return false;
        }
        if(pagesum + arr[i] <= mid){
            pagesum += arr[i];
        }else{
            studentcount++;
            pagesum = arr[i];
        }
    }
    return studentcount > m ? false : true;
}
int bookallocation(vector<int> arr, int n, int m){
    if(m > n){
        return -1;
    }
    int sum = 0; 
    for(int i : arr){
        sum += i;
    }
    int ans = -1;
    int start = 0, end = sum; // range of possible answers
    while(start <= end){
        int mid = start + (end - start) / 2;
        if(isvalid(arr, n, m, mid)){
            ans = mid;
            end = mid - 1;
        }else{
            start = mid + 1;
        }
    }
} 

int main(){
    vector<int> arr = {15, 17, 20};
    int n = arr.size();
    int m = 2; // number of students
    cout << bookallocation(arr, n, m) << endl;
    return 0;
} 
